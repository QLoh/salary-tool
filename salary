<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <title>114年 三保一退查詢小工具</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; margin-top: 50px; }
    input, button { padding: 8px; margin: 5px; font-size: 16px; }
    .result { margin-top: 20px; font-size: 18px; font-weight: bold; line-height: 1.8; }
  </style>
</head>
<body>
  <h2>💡 114年 三保一退查詢小工具</h2>
  <p>輸入你的薪水，快速比對投保級距與負擔金額</p>
  
  <input type="number" id="salary" placeholder="請輸入薪水">
  <button onclick="calculate()">查詢</button>
  
  <div class="result" id="output"></div>
  
  <script>
    // 114年級距表 (僅保留主要欄位：級距、公司合計、員工合計、勞退)
    const table = [
      { level: 1500, company: 2506, employee: 720, laborPension: 90 },
      { level: 3000, company: 2596, employee: 720, laborPension: 180 },
      { level: 4500, company: 2686, employee: 720, laborPension: 270 },
      { level: 6000, company: 2776, employee: 720, laborPension: 360 },
      { level: 7500, company: 2866, employee: 720, laborPension: 450 },
      { level: 8700, company: 2938, employee: 720, laborPension: 522 },
      { level: 9900, company: 3010, employee: 720, laborPension: 594 },
      { level: 11100, company: 3082, employee: 720, laborPension: 666 },
      { level: 12540, company: 3293, employee: 756, laborPension: 752 },
      { level: 13500, company: 3384, employee: 781, laborPension: 810 },
      { level: 15840, company: 3780, employee: 839, laborPension: 950 },
      { level: 16500, company: 3878, employee: 856, laborPension: 990 },
      { level: 17280, company: 3993, employee: 875, laborPension: 1037 },
      { level: 17880, company: 4081, employee: 890, laborPension: 1073 },
      { level: 19047, company: 4253, employee: 919, laborPension: 1143 },
      { level: 20008, company: 4395, employee: 943, laborPension: 1200 },
      { level: 21009, company: 4689, employee: 968, laborPension: 1261 },
      { level: 22000, company: 4689, employee: 993, laborPension: 1320 },
      { level: 23100, company: 4852, employee: 1018, laborPension: 1386 },
      { level: 24000, company: 4980, employee: 1043, laborPension: 1440 },
      { level: 25250, company: 5169, employee: 1075, laborPension: 1515 },
      { level: 26400, company: 5338, employee: 1103, laborPension: 1584 },
      { level: 27600, company: 5515, employee: 1133, laborPension: 1656 }
    ];

    function calculate() {
      const salary = parseInt(document.getElementById("salary").value);
      if (isNaN(salary)) {
        document.getElementById("output").innerHTML = "⚠️ 請輸入正確的薪水數字";
        return;
      }

      // 找最接近且不超過薪水的級距
      let matched = table[0];
      for (let i = 0; i < table.length; i++) {
        if (salary >= table[i].level) {
          matched = table[i];
        }
      }

      document.getElementById("output").innerHTML = 
        `📊 投保級距：${matched.level} 元 <br>
         🏢 公司負擔合計：${matched.company} 元 <br>
         👩‍💼 員工負擔合計：${matched.employee} 元 <br>
         💰 勞退提撥(雇主6%)：${matched.laborPension} 元`;
    }
  </script>
</body>
</html>
